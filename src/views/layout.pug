doctype html
html lang="en"
   head
      meta 
      |charset="UTF-8"
      meta 
      |name="viewport" content="width=device-width, initial-scale=1.0"
      title Simon Game
      link 
      |rel="stylesheet" href="/public/css/game.css" /
      script src="http://code.jquery.com/jquery-3.3.1.min.js" 
      script src="/public/js/game.js"
   head
   body
      aside 
         block content
            div
               button id="green" name="green" class="tile upper-left-tile"
               button id="red" name="red" class="tile upper-right-tile"
            div
               button id="yellow" name="yellow" class="tile lower-left-tile"
               button id="blue" name="blue" class="tile lower-right-tile"
            div
               button id="start" class="btn success" onclick='gameLoop()' Start
               button id="end" class="btn danger" Off
            div id="roundCounter" 0 
  

